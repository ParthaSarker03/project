@model FoodDeliveryApp.ViewModels.CustomerLoginViewModel

@{
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
    ViewData["Title"] = "Customer Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Customer Login</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body {
            background: url('/img/food3.jpg') no-repeat center center fixed;
            background-size: cover;
        }

        .card {
            backdrop-filter: blur(15px); /* Glassmorphic Effect */
            background: rgba(255, 255, 255, 0.2); /* Transparent */
            border-radius: 15px;
            box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.2);
        }

        .card-header {
            background: transparent !important; /* No background */
            color: white; /* Keep it readable */
            font-weight: bold;
        }

        .form-control {
            background: rgba(255, 255, 255, 0.1); /* Fully transparent fields */
            border: 1px solid rgba(255, 255, 255, 0.3); /* Light borders */
            color: white; /* Ensure visibility */
            border-radius: 10px;
        }

            .form-control::placeholder {
                color: rgba(255, 255, 255, 0.7);
            }

            .form-control:focus {
                background: rgba(255, 255, 255, 0.2);
                border-color: rgba(255, 255, 255, 0.5);
                box-shadow: 0px 0px 10px rgba(255, 255, 255, 0.3);
            }

        .btn-primary {
            background: rgba(255, 255, 255, 0.1);
            color: white;
            border: 1px solid rgba(255, 255, 255, 0.5);
        }

            .btn-primary:hover {
                background: rgba(255, 255, 255, 0.2);
                color: white;
                border: 1px solid rgba(255, 255, 255, 0.7);
            }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <!-- Customer Login Card -->
                <div class="card shadow-lg rounded-4">
                    <div class="card-header text-center">
                        <h4 class="mb-0">Customer Login</h4>
                    </div>
                    <div class="card-body p-4">
                        <form asp-controller="CustomerAccount" asp-action="Login" method="post">
                            <div class="mb-3">
                                <label asp-for="Email" class="form-label fw-bold">Email</label>
                                <input asp-for="Email" class="form-control border-0 shadow-sm" placeholder="Enter your email">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Password" class="form-label fw-bold">Password</label>
                                <input asp-for="Password" type="password" class="form-control border-0 shadow-sm" placeholder="Enter your password">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary btn-lg shadow-sm">Login</button>
                            </div>
                        </form>
                        <div class="mt-3 text-center">
                            <small>Don't have an account? <a asp-controller="CustomerAccount" asp-action="Register" class="fw-bold text-light">Register now</a>.</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @section Scripts {
        @await Html.PartialAsync("_ValidationScriptsPartial")
    }
</body>
</html>

