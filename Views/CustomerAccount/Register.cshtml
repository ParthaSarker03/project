@model FoodDeliveryApp.ViewModels.CustomerRegisterViewModel

@{
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
    ViewData["Title"] = "Customer Registration";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Customer Registration</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body {
            background: url('/img/food-bg.jpg') no-repeat center center fixed;
            background-size: cover;
        }

        .card {
            backdrop-filter: blur(15px); /* Glassmorphic Effect */
            background: rgba(255, 255, 255, 0.2); /* More transparency */
            border-radius: 15px;
            box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.2);
        }

        .btn-success {
            background: linear-gradient(135deg, #28a745, #218838);
            border: none;
        }

            .btn-success:hover {
                background: linear-gradient(135deg, #218838, #1e7e34);
            }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <!-- Customer Registration Card -->
                <div class="card bg-white bg-opacity-50 shadow-lg rounded-4">
                    <div class="card-header text-white text-center bg-success rounded-top-4">
                        <h4 class="mb-0">Customer Registration</h4>
                    </div>
                    <div class="card-body p-4">
                        <form asp-controller="CustomerAccount" asp-action="Register" method="post">
                            <div class="mb-3">
                                <label asp-for="CustomerName" class="form-label fw-bold"></label>
                                <input asp-for="CustomerName" class="form-control border-0 shadow-sm" placeholder="Enter your full name">
                                <span asp-validation-for="CustomerName" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Email" class="form-label fw-bold"></label>
                                <input asp-for="Email" class="form-control border-0 shadow-sm" placeholder="Enter your email address">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Password" class="form-label fw-bold"></label>
                                <input asp-for="Password" type="password" class="form-control border-0 shadow-sm" placeholder="Enter a secure password">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="PhoneNumber" class="form-label fw-bold"></label>
                                <input asp-for="PhoneNumber" class="form-control border-0 shadow-sm" placeholder="Enter your phone number">
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Address" class="form-label fw-bold"></label>
                                <input asp-for="Address" class="form-control border-0 shadow-sm" placeholder="Enter your address">
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                            <div class="d-grid mt-4">
                                <button type="submit" class="btn btn-success btn-lg shadow-sm">Register</button>
                            </div>
                        </form>
                        <div class="mt-3 text-center">
                            <small>Already have an account? <a asp-controller="CustomerAccount" asp-action="Login" class="fw-bold text-success">Login here</a>.</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @section Scripts {
        @await Html.PartialAsync("_ValidationScriptsPartial")
    }
</body>
</html>
